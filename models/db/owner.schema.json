{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Owner",
    "type": "object",
    "properties": {
        "owner_hash": {
            "type": "string",
            "minLength": 43,
            "maxLength": 43,
            "pattern": "^[A-Za-z0-9_-]{43}$",
            "description": "URL-safe base64 (43 chars, e.g., for a SHA256-url-encoded hash) as unique pseudonymous ID"
        },
        "salt": {
            "type": "string",
            "minLength": 22,
            "maxLength": 22,
            "pattern": "^[A-Za-z0-9./]{22}$",
            "description": "bcrypt salt string (22 chars, only . and / plus base64 letters)"
        },
        "password_hash": {
            "type": "string",
            "minLength": 60,
            "maxLength": 60,
            "pattern": "^\\$2[aby]\\$[0-9]{2}\\$[A-Za-z0-9./]{53}$",
            "description": "bcrypt hash string (60 chars, standard bcrypt format)"
        },
        "public_key": {
            "type": "string",
            "minLength": 272,
            "maxLength": 800,
            "pattern": "^-----BEGIN PUBLIC KEY-----(.|\\n)+-----END PUBLIC KEY-----\\n?$",
            "description": "PEM encoded public key (exact pattern may vary depending on key format/length)"
        },
        "random_entropy": {
            "type": "string",
            "minLength": 32,
            "maxLength": 64,
            "pattern": "^[A-Fa-f0-9]{32,64}$",
            "description": "Random hex-encoded entropy (32-64 chars, for cryptographic purposes)"
        },
        "created_at": {
            "type": "integer",
            "description": "Unix timestamp when the owner was created"
        },
        "status": {
            "type": "string",
            "enum": [
                "active",
                "blocked",
                "in_deletion"
            ],
            "default": "active",
            "description": "Owner account status flag: active, blocked, or pending deletion"
        }
    },
    "required": [
        "owner_hash",
        "salt",
        "password_hash",
        "public_key",
        "random_entropy",
        "created_at"
    ]
}